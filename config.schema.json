{
  "id": "/Config",
  "type": "object",
  "patternProperties": {
    ".*": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {"type": "string"},
          "service": {"type": "string"},
          "httpPort": {"type": "number"},
          "wsPort": {"type": "number"}
        },
        "anyOf": [
          {"required": ["path", "service", "httpPort"]},
          {"required": ["path", "service", "wsPort"]}
        ]
      }
    }
  },
  "required": ["hosts"]
}
